rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public to view episodes and RSS
    match /episodes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; 
    }
    match /public/{allPaths=**} {
      allow read: if true;
    }
    // Allow public to view article images, admins to upload
    match /articles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
